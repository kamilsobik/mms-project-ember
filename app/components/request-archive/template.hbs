<div class='container'>
  <table class='table table-striped'>
    <thead class='table-active'>
      <tr>
        <th scope='col'>Type</th>
        <th scope='col'>Requestor</th>
        <th scope='col'>Machine</th>
        <th scope='col'>Title</th>
        <th scope='col'>Solution</th>
        <th scope='col'>Downtime [min]</th>
        <th scope='col'>Created date</th>
      </tr>
    </thead>
    <tbody>
      {{#each this.allRequests as |request|}}
        <tr class={{class-table request.type}}>
          <td>{{request.type}}</td>
          <td>{{request.owner.username}}</td>
          <td>{{request.machine}}</td>
          <td>{{request.title}}</td>
          <td>{{request.solution}}</td>
          <td>{{request.downtime}}</td>
          <td>{{moment-format request.createdAt 'DD-MM-YYYY  HH:mm:ss'}}</td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>