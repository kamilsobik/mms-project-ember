<ModalDialog>
  <div class='modal-dialog modal-xl'>
    <div class='modal-content'>
      <div class='modal-header'>
        <h5 class='modal-title'>Edit user: {{@user.username}}</h5>
      </div>
      <div class='modal-body'>
        <div class='mb-3'>
          <label for='emailUserInput' class='form-label'>Enter new email</label>
          <Shared::Input
            @type='email'
            @id='editEmailInput'
            @placeholder={{@user.email}}
            @value={{this.email}}
            @onChange={{this.onEmailChange}}
          />
        </div>
        <div class='mb-3'>
          <label for='passwordUserInput' class='form-label'>Enter new password</label>
          <Shared::Input
            @type='password'
            @id='editPasswordInput'
            @placeholder={{@user.password}}
            @value={{this.password}}
            @onChange={{this.onPasswordChange}}
          />
        </div>
        <div class='mb-3'>
          <label for='userTypeInput' class='form-label'>Change user type:</label>
          <PowerSelect
            @selected={{@user.userType}}
            @options={{this.userType}}
            @onChange={{this.onUserTypeChange}}
            as |value|
          >
            {{value}}
          </PowerSelect>
        </div>
      </div>
      <div class='modal-footer'>
        <Shared::Button
          class='btn-dark'
          @label='Delete user'
          @onClick={{this.onDeleteUser}}
        />
        <Shared::Button
          class='btn-danger'
          @label='Cancel'
          @onClick={{this.onCancel}}
        />
        <Shared::Button
          class='btn-success'
          @label='Save change'
          @onClick={{this.onSaveChange}}
        />
      </div>
    </div>
  </div>
</ModalDialog>