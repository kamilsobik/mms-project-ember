<tr class={{class-table @request.type}}>
  <td>{{@request.status}}</td>
  <td>{{@request.type}}</td>
  <td>{{@request.owner.username}}</td>
  <td>{{@request.machine}}</td>
  <td>{{@request.title}}</td>
  <td>{{moment-format @request.createdAt 'DD-MM-YYYY  HH:mm:ss'}}</td>
  <td align='center'><button
      type='button'
      class='btn btn-danger'
      {{on 'click' this.onShowModal}}
    >
      <FaIcon @icon='check' />
    </button></td>
</tr>

{{#if this.isShowCreateModal}}
  <Modal::ShowRequest @onClose={{this.onHideModal}} @request={{@request}} />
{{/if}}