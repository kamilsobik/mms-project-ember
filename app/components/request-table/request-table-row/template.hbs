<tr class={{class-table @request.type}}>
  <td>{{@request.status}}</td>
  <td>{{@request.type}}</td>
  <td>{{@request.owner.username}}</td>
  <td>{{@request.machine}}</td>
  <td>{{@request.title}}</td>
  <td>{{format-date @request.createdAt 'dd-MM-yyyy HH:mm'}}</td>
  <td align='center'>
    <Shared::Button
      class='btn'
      @variant='danger'
      @faIcon='check'
      @onClick={{this.onShowModal}}
    />
  </td>
</tr>

{{#if this.isShowCreateModal}}
  <Modal::ShowRequest @onClose={{this.onHideModal}} @request={{@request}} />
{{/if}}