{{page-title 'Responder'}}

<div class='container'>
  <div class='form-floating mb-3'>
    <select class='form-select' aria-label='Default select example'>
      <option selected>Select open request</option>
      <option value='1'>Request 1</option>
      <option value='2'>Request 2</option>
      <option value='3'>Request 3</option>
      <option value='4'>Request 4</option>
      <option value='5'>Request 5</option>
    </select>
  </div>

  <div class='form-floating mb-3'>
    <input
      type='number'
      class='form-control'
      id='floatingInput'
      placeholder='number'
    />
    <label for='floatingInput'>Time (minutes)</label>
  </div>

  <div class='form-check'>
    <input
      class='form-check-input'
      type='radio'
      name='flexRadioDefault'
      id='flexRadioDefault2'
      checked
    />
    <label class='form-check-label' for='flexRadioDefault2'>
      Close request
    </label>
  </div>
  <div class='form-check'>
    <input
      class='form-check-input'
      type='radio'
      name='flexRadioDefault'
      id='flexRadioDefault1'
    />
    <label class='form-check-label' for='flexRadioDefault1'>
      Reject request
    </label>
  </div>
  <div class='d-grid gap-2'>
    <button type='submit' class='btn btn-success'>Close request</button>
  </div>

</div>
{{outlet}}